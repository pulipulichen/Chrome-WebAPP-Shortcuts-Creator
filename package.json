{
  "name": "chrome-webapp-shortcuts-creator",
  "author": "Pulipuli Chen <blog@pulipuli.info>",
  "version": "1.0.0",
  "description": "Create shortcuts with Google Chrome App mode",
  "main": "main.js",
  "scripts": {
    "0.run-development": "node run.js --mode development",
    "1.run-production": "node run.js --mode production",
    "e0.run-development": "electron bin/electron/index-electron.js --mode development",
    "e1.run-production": "electron bin/electron/index-electron.js --mode production",
    "pack": "electron-builder --dir",
    "8.dist": "electron-builder && node open-dist.js",
    "9.open-dist": "node open-dist.js"
  },
  "dependencies": {
    "cheerio": "0.19",
    "electron-settings": "^3.2.0",
    "follow-redirects": "^1.7.0",
    "iconv-lite": "^0.4.23",
    "image-downloader": "^3.5.0",
    "jquery": "^3.3.0",
    "parse-favicon": "^2.0.0",
    "platform-folders": "^0.4.0",
    "request": "^2.87.0",
    "terminal-exec": "^0.0.2",
    "universalify": "^0.1.2",
    "windows-shortcuts": "^0.1.6"
  },
  "devDependencies": {
    "electron": "^6.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://pulipuli.chen@gmail.com@github.com/pulipulichen/Chrome-WebAPP-Shortcuts-Creator.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pulipulichen/Chrome-WebAPP-Shortcuts-Creator/issues"
  },
  "homepage": "https://github.com/pulipulichen/Chrome-WebAPP-Shortcuts-Creator#readme",
  "build": {
    "appId": "chrome.webapp.shortcuts.creator",
    "compression": "maximum",
    "mac": {
      "category": "chrome.webapp.shortcuts.creator"
    },
    "win": {
      "icon": "app/imgs/icon.ico",
      "target": "portable"
    },
    "linux": {
      "icon": "app/imgs/icon256.png",
      "category": "Network",
      "target": "deb",
      "desktop": {
        "Icon": "/opt/chrome-webapp-shortcuts-creator/app/imgs/icon256.png"
      }
    },
    "portable": {
      "artifactName": "chrome-webapp-shortcuts-creator.exe"
    }
  },
  "files": [
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
    "main.js",
    "ipc.js",
    "app/*"
  ]
}